FROM debian

ENV TZ=Asia/Tokyo
ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update \
  && apt-get install -y --no-install-recommends \
    sudo \
  && apt-get clean \
  && rm -rf /var/lib/apt/lists/*

RUN useradd -m --uid 1337 debug && \
    echo "debug ALL=NOPASSWD: ALL" >> /etc/sudoers

RUN apt-get update \
  && apt-get install -y --no-install-recommends \
    iproute2 \
    tcpdump \
    wireshark \
  && apt-get clean \
  && rm -rf /var/lib/apt/lists/*
